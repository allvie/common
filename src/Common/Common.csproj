<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <AssemblyName>NanoByte.Common</AssemblyName>
    <RootNamespace>NanoByte.Common</RootNamespace>
    <TargetFrameworks>net20;net35-client;net40-client;net45</TargetFrameworks>
    <GenerateDocumentationFile>True</GenerateDocumentationFile>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <IncludeSource>True</IncludeSource>
    <NoWarn>$(NoWarn);1591</NoWarn>
    <TreatWarningsAsErrors>True</TreatWarningsAsErrors>
    <SignAssembly>True</SignAssembly>
    <AssemblyOriginatorKeyFile>..\sgKey.snk</AssemblyOriginatorKeyFile>
    <RunCodeAnalysis>False</RunCodeAnalysis>
    <CodeAnalysisRuleSet>..\CodeAnalysis.ruleset</CodeAnalysisRuleSet>
    <OutputPath>..\..\build\$(Configuration)\</OutputPath>
  </PropertyGroup>

  <!-- Support old .NET Framework Client Profiles -->
  <PropertyGroup Condition="'$(TargetFramework)' == 'net35-client'">
    <TargetFrameworkIdentifier>.NETFramework</TargetFrameworkIdentifier>
    <TargetFrameworkVersion>v3.5</TargetFrameworkVersion>
    <TargetFrameworkProfile>client</TargetFrameworkProfile>
    <DefineConstants>$(DefineConstants);NET35</DefineConstants>
  </PropertyGroup>
  <PropertyGroup Condition="'$(TargetFramework)' == 'net40-client'">
    <TargetFrameworkIdentifier>.NETFramework</TargetFrameworkIdentifier>
    <TargetFrameworkVersion>v4.0</TargetFrameworkVersion>
    <TargetFrameworkProfile>client</TargetFrameworkProfile>
    <DefineConstants>$(DefineConstants);NET40</DefineConstants>
  </PropertyGroup>

  <PropertyGroup>
    <Version>2.1.0</Version>
    <Description>
      Generic utility classes, interfaces, controls, etc. that are applicable to a wide range of different applications.
      API documentation: http://nano-byte.de/common/api/
    </Description>
    <PackageProjectUrl>http://nano-byte.de/common/</PackageProjectUrl>
    <PackageLicenseUrl>http://opensource.org/licenses/MIT</PackageLicenseUrl>
    <RepositoryUrl>https://github.com/nano-byte/common</RepositoryUrl>
    <Authors>Bastian Eicher</Authors>
    <Company>NanoByte</Company>
    <Copyright>Copyright 2006-2017 Bastian Eicher et al</Copyright>
  </PropertyGroup>

  <ItemGroup>
    <!-- Used as a Reference Assembly, not distributed with NuGet package -->
    <Reference Include="Mono.Posix" HintPath="..\..\lib\Mono.Posix.dll" Private="False" />
  </ItemGroup>

  <ItemGroup>
    <!-- Workaround to ensure satellite assemblies are packaged -->
    <PackageReference Include="NuGet4698Workaround" Version="1.0.1" PrivateAssets="All" />

    <PackageReference Include="JetBrains.Annotations" Version="10.4.0" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Net\WebClientTimeout.cs">
      <SubType>Component</SubType>
    </Compile>
  </ItemGroup>

</Project>
